<p id="notice"><%= notice %></p>

<p>
  <strong>Bill amount:</strong>
  <%= @bill_payment.bill_amount %>
</p>

<p>
  <strong>Bill purpose:</strong>
  <%= @bill_payment.bill_purpose %>
</p>

<p>
  <strong>Paid by:</strong>
  <%= @bill_payment.paid_by %>
</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Money to be paid</th>
      <th>Pending</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_payment.group.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.money_to_be_paid %></td>
        <td><%= user.pending %></td>
        <td><%= link_to 'Settle',update_pending_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_bill_payment_path(@bill_payment) %> |
<%= link_to 'Back', bill_payments_path %>
